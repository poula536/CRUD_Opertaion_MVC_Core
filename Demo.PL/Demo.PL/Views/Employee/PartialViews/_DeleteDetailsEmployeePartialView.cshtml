@model EmployeeViewModel
<div class="form-group">
    <label class="col-form-label" asp-for="Name"></label>
    <input type="text" class="form-control" asp-for="Name" readonly />
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Age"></label>
    <input type="text" class="form-control" asp-for="Age" readonly />
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Adsress"></label>
    <input type="text" class="form-control" asp-for="Adsress" readonly />
    <span asp-validation-for="Adsress" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Salary"></label>
    <input type="text" class="form-control" asp-for="Salary" readonly />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="IsActive"></label>
    <input type="checkbox" class="form-control" asp-for="IsActive" readonly />
    <span asp-validation-for="IsActive" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="Email"></label>
    <input type="email" class="form-control" asp-for="Email" readonly />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="PhoneNumber"></label>
    <input type="text" class="form-control" asp-for="PhoneNumber" readonly />
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
</div>
<div class="form-group">
    <label class="col-form-label" asp-for="HireDate"></label>
    <input class="form-control" asp-for="HireDate" readonly />
    <span asp-validation-for="HireDate"></span>
</div>
