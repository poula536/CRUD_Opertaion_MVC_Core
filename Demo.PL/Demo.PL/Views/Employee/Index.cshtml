@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1 class="mb-3">All Employees</h1>

<form asp-action="Index" class="mb-3"> 
    <div class="row align-items-center justify-content-center">
        <div class="col-8">
            <input type="text" placeholder="Search By Name" class="form-control" name="SearchValue"/>
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn btn-success" />
        </div>
    </div>
</form>

<a asp-action="Create" class="btn mb-5 btn-primary">Create New Employee</a>
@if (Model.Count() > 0)
{
    <table class="table table-striped  table-borderless table-hover">
        <thead>
            <tr class="thead-dark">
                <th>@Html.DisplayNameFor(E => E.Name)</th>
                <th>@Html.DisplayNameFor(E => E.Age)</th>
                <th>@Html.DisplayNameFor(E => E.Adsress)</th>
                <th>@Html.DisplayNameFor(E => E.Image)</th>
                <th>@Html.DisplayNameFor(E => E.DepartmentId)</th>
                <th>@Html.DisplayNameFor(E => E.Salary)</th>
                <th>@Html.DisplayNameFor(E => E.IsActive)</th>
                <th>@Html.DisplayNameFor(E => E.Email)</th>
                <th>@Html.DisplayNameFor(E => E.PhoneNumber)</th>
                <th>@Html.DisplayNameFor(E => E.HireDate)</th>
                <th>Details</th>              
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(M=> employee.Name)</td>
                    <td>@Html.DisplayFor(M=> employee.Age)</td>
                    <td>@Html.DisplayFor(M=> employee.Adsress)</td>
                    <td>
                        <img src="~/files/images/@employee.ImageName" alt="Employee Image" class="img-fluid h-25 "/>
                    </td>
                    <td>@Html.DisplayFor(M=> employee.Department.Name)</td>
                    <td>@Html.DisplayFor(M=> employee.Salary)</td>
                    <td>@Html.DisplayFor(M=> employee.IsActive)</td>
                    <td>@Html.DisplayFor(M=> employee.Email)</td>
                    <td>@Html.DisplayFor(M=> employee.PhoneNumber)</td>
                    <td>@Html.DisplayFor(M=> employee.HireDate)</td>
                    <partial name="_ButtonsPartialView" model="@employee.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There Is No Employee</h3>
    </div>
}