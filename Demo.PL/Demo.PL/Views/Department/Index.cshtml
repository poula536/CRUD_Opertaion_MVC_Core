@*<div class="alret alert-success">
    @ViewBag.Message
</div>
*@
@if (TempData["Message"] != null)
{

    <div class="alret alert-success">
        @TempData["Message"]
    </div>
}


<h1 class="mb-3">All Departments</h1>
<a asp-action="Create" class="btn mb-5 btn-primary">Create New Department</a>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-borderless table-hover">
        <thead class="table-danger">
            <tr>
                <th>@Html.DisplayNameFor(D => D.Code)</th>
                <th>@Html.DisplayNameFor(D=> D.Name)</th>
                <th>@Html.DisplayNameFor(D=> D.DateOfCreation)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var departments in Model)
            {
                <tr>
                    <td>@departments.Code</td>
                    <td>@departments.Name</td>
                    <td>@departments.DateOfCreation</td>
                    <partial name="_ButtonsPartialView" model="@departments.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There Is No Departments</h3>
    </div>
}