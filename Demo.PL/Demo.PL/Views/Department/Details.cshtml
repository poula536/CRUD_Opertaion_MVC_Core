@model Department
@{
    ViewData["Title"] = "Details";
}

<h1>Department Details</h1>
<div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input type="text" class="form-control" asp-for="Code" readonly/>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input type="text" class="form-control" asp-for="Name" readonly/>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input class="form-control" asp-for="DateOfCreation" readonly/>

    </div>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-danger">Edit</a> |
    <a asp-action="Index" class="btn btn-light">Back</a>
</div>


