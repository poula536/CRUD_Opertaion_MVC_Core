@model Department
@{
    ViewData["Title"] = "Create";
}

<h1 class="mb-10">Create New Department </h1>
<form asp-action="Create" class="mt-5">
    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input type="text" class="form-control" asp-for="Code" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input class="form-control" asp-for="DateOfCreation" />
        <span asp-validation-for="DateOfCreation"></span>
    </div>
    <input type="submit" value="Submit" class="btn btn-primary" /> |
    <a asp-action="Index" class="btn btn-light">Back</a>
</form>

@section ValidationScriptSection{
    <partial name="_ValidationScriptsPartial" />
}
